#!/bin/bash
#
# Git pre-commit hook for BACKLOG.md enforcement
# Install: cp hooks/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit
#

BACKLOG_FILE="BACKLOG.md"
STALE_HOURS=2

# Colors
RED='\033[0;31m'
YELLOW='\033[1;33m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

# Check if BACKLOG.md exists
if [ ! -f "$BACKLOG_FILE" ]; then
    echo -e "${YELLOW}⚠️  Warning: No $BACKLOG_FILE found${NC}"
    echo "   Consider running: backlog init"
    echo ""
    # Don't block, just warn
    exit 0
fi

# Check for stale in-progress items
if command -v backlog &> /dev/null; then
    STALE_OUTPUT=$(backlog stale $STALE_HOURS 2>&1)
    if echo "$STALE_OUTPUT" | grep -q "⚠️  Stale items"; then
        echo -e "${YELLOW}⚠️  BACKLOG Warning:${NC}"
        echo "$STALE_OUTPUT"
        echo ""
        echo "Consider: backlog done <id> or continue working on the task"
        echo ""
        # Don't block, just warn
    fi
fi

# Check if BACKLOG.md was modified in this commit
if git diff --cached --name-only | grep -q "^$BACKLOG_FILE$"; then
    echo -e "${GREEN}✅ BACKLOG.md updated${NC}"
fi

exit 0
